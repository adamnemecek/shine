{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cargo test",
            "command": "cargo",
            "args": [
                "test",
                "-p",
                "shine-store"
            ],
            "options": {
                "env": {
                    "RUST_TEST_THREADS": "1"
                }
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "cargo build",
            "command": "cargo",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}