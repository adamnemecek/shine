{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "cargo",
            "args": [
                "build",
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "clear": true,
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "run",
            "command": "cargo",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "args": [
                "run",
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "clear": true,
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "build all tests",
            "command": "cargo build -p shine-${input:pickProject}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "clear": true,
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "project run all tests",
            "command": "cargo test -p shine-${input:pickProject} -- --nocapture --test-threads=1",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "clear": true,
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "project clear & clippy",
            "command": "cargo clean; cargo clippy -p shine-${input:pickProject}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "clear": true,
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "project clippy",
            "command": "cargo clippy -p shine-${input:pickProject}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "clear": true,
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
    ],
    "inputs": [
        {
            "id": "pickProject",
            "description": "The subproject",
            "type": "pickString",
            "default": "shard",
            "options": [
                "math",
                "ecs",
                "gltf",
                "graph",
                "stdext",
                "input",
                "shard",
                "testutils"
            ]
        },
    ]
}